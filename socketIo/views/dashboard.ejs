<%- include('./layout/header.ejs') %>
    <h2 class="mb-4">Hi, <%= user.name %></h2>
    <div class="row">
        <div class="col-md-3">
            
            <!-- List of Users -->
            <ul class="list-group">
                <% if(users.length > 0){ %>
                    <% for(let i = 0; i < users.length; i++){ %> 
                        <li class="list-group-item list-grop-item-dark d-flex align-items-center user-list" style="cursor: pointer;">
                            <img src="<%= users[i].image %>" alt="" width="50px" height="50px" class="mr-3 rounded-circle">
                            <div>
                                
                                <div class="media">
                                    <div class="media-body">
                                        <h5 class="mt-0 mb-1"><%= users[i].name %></h5>
                                    </div>
                                </div>
                                <%= users[i].name %>
                            </div>

                        </li>
                    <% } %>
                <% } %>
            </ul>
        </div>
        <div class="col-md-9">
            <h3 class="start-head">Click to Start the Chat</h3>
            <div class="chat-section">
                <div id="chat-container">
                </div>
                <form action="" id="chat-form">
                    <input type="text" name="message" placeholder="Enter Message" id="message" class="border" required>
                    <input type="submit" value="Send message" class="btn btn-primary">
                </form>
            </div>
        </div>

        <script>
            $(document).ready(()=>{
                $('.user-list').click(()=>{
                    $('.start-head').hide()
                    $('.chat-section').show()
                
                })
            })
        </script>
<%- include('./layout/footer.ejs') %>
